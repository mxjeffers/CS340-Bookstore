<h1>BookAuthors</h1>
<p> This page shows the relationship between a book and its authors.</p>
<div class="container">
        <table id="author_table" class="table table-striped"></table>
        
</div>

<script>
const author_table = document.getElementById("author_table")
function createAuthorTable(){
    $('#author_table').empty()
    var headings = ["bookId","Title","authorId","author"]
    var tr = author_table.insertRow(-1)
    for (var i=0; i< headings.length; i++){
        var th =  document.createElement('th')
        th.innerHTML = headings[i]
        tr.appendChild(th)
    }
    //change tomorrow
    $.get('/BookAuthors/data',(authordata)=>{
        maketable(authordata)
    })
}
function maketable(authordata){
    $.each(authordata,(key,val)=>{
        var tr =author_table.insertRow(-1)
        for(x in val){
            td = document.createElement('td')
            td.innerHTML=(val[x])
            tr.appendChild(td)
        }

    })
}

createAuthorTable()
</script>